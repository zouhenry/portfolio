#header.layout-row(layout-align="space-between center")
  .brand.layout-row(layout-align="start center")
    .avatar logo
    .name Henry Zou
  .menu.layout-row(hide-xs)
    .menu-item(ng-repeat="item in layoutCtrl.navItems | orderBy:'tabIndex':true")
      a(ui-sref="{{item.state}}") {{item.tabName}}
  .social-media(hide-xs)
    a.social-link.social-link-facebook(target="_blank" href="https://www.linkedin.com/in/zouhenry" title="Henry Zou on Linkedin")
      i.fa.fa-linkedin.fa-lg
    a.social-link.social-link-facebook(target="_blank" href="https://github.com/zouhenry" title="Henry Zou on GitHub")
      i.fa.fa-github.fa-lg
    a.hide.social-link.social-link-facebook(target="_blank" href="https://www.linkedin.com" title="Henry Zou on Linkedin")
      i.fa.fa-youtube.fa-lg
  md-menu(hide-gt-xs)
    md-button.md-icon-button(ng-click='layoutCtrl.openMenu($mdOpenMenu, $event)')
      md-icon.fa.fa-lg(md-font-icon='fa-bars')
    md-menu-content(width='4')
      md-menu-item(ng-repeat="item in layoutCtrl.navItems | orderBy:'tabIndex':true" ui-sref="{{item.state}}")
        md-button
          | {{item.tabName}}
      md-menu-divider
      md-menu-item
        a.md-button(target="_blank" href="https://www.linkedin.com/in/zouhenry" title="Henry Zou on Linkedin")
          md-icon.fa.fa-lg(md-font-icon='fa-linkedin', md-menu-align-target='')
            | LinkedIn
      md-menu-item
        a.md-button(target="_blank" href="https://github.com/zouhenry" title="Henry Zou on GitHub")
          md-icon.fa.fa-lg(md-font-icon='fa-github', md-menu-align-target='')
            | Github
      md-menu-item.hide
        a.md-button(target="_blank" href="https://github.com/zouhenry" title="Henry Zou on GitHub")
          md-icon.fa.fa-lg(md-font-icon='fa-youtube', md-menu-align-target='')
            | Youtube
#content
  ui-view